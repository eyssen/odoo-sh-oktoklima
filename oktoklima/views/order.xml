<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>





		<!-- Order -->

		<record id="sale_order_form_view" model="ir.ui.view">
			<field name="name">sale.order.form</field>
			<field name="model">sale.order</field>
			<field name="inherit_id" ref="sale.view_order_form" />
			<field name="arch" type="xml">

				<header>
					<button type="object" name="wizard_merge_into_product" string="Termék összevonás" attrs="{'invisible': [('state', 'not in', ['draft', 'sent'])]}" />
				</header>

                <xpath expr="//page/field[@name='order_line']/tree/field[@name='price_unit']" position="after">
                    <!-- below fields are used in the widget supplierinfo_widget -->
                    <field name="supplierinfo_popover" invisible="1"/>
                    <widget name="supplierinfo_widget" width="0.1"/>
                </xpath>

			</field>
		</record>


        <template id="sale_order_line_view_list" name="sale.order.line.view.list" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <script type="text/javascript" src="/oktoklima/static/src/js/supplierinfo_widget.js"></script>
            </xpath>
        </template>




		<!-- Product Wizard -->

		<record id="sale_order_product_wizard_view_form" model="ir.ui.view">
			<field name="name">sale.order.product.wizard.form</field>
			<field name="model">sale.order.product.wizard</field>
			<field name="arch" type="xml">
				<form string="Feladat varázsló">
				
					<group>
						<group>
							<field name="order_id" invisible="1" />
							<field name="name" />
							<field name="default_code" />
						</group>
						<group>
							<field name="list_price" />
							<field name="standard_price" />
						</group>
						<field name="line_ids">
							<tree>
								<field name="product_id" />
								<field name="name" />
							</tree>
						</field>
					</group>

					<footer>
						<button type="object" name="action_create_product" string="Termék létrehozása" class="btn-primary" />
						<button string="Mégse" class="btn-default" special="cancel" />
					</footer>

				</form>
			</field>
		</record>





	</data>
</openerp>
